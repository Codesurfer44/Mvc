@using Mvc.Core.Editors
@model Mvc.Domain.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.InputFor(model => model.Title)
            @Html.InputFor(model => model.ReleaseDate)
            @Html.InputFor(model => model.Price)
            @Html.InputFor(model => model.Genre)
            @Html.InputFor(model => model.Rating)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
